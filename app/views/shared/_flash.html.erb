<% notice_message = local_assigns[:notice] || flash[:notice] %>
<% alert_message  = local_assigns[:alert]  || flash[:alert] %>

<div class="grid gap-2">
  <% if notice_message.present? %>
    <div class="nb-card nb-card--tight nb-card--notice" role="status">
      <p class="font-black"><%= notice_message %></p>
    </div>
  <% end %>

  <% if alert_message.present? %>
    <div class="nb-card nb-card--tight nb-card--alert" role="alert">
      <p class="font-black"><%= alert_message %></p>
    </div>
  <% end %>
</div>

