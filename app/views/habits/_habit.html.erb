<div id="<%= dom_id habit %>" class="nb-card nb-card--tight" style="background: <%= habit.color %>">
  <div class="flex flex-col gap-3 sm:flex-row sm:items-start sm:justify-between">
    <div class="min-w-0">
      <p class="text-xl font-black truncate"><%= habit.name %></p>
      <% if habit.description.present? %>
        <p class="mt-1 text-sm text-black/70"><%= habit.description %></p>
      <% end %>
      <div class="mt-3 flex flex-wrap items-center gap-2">
        <% if habit.active? %>
          <span class="nb-pill nb-pill--white">Active</span>
        <% else %>
          <span class="nb-pill nb-pill--white">Paused</span>
        <% end %>
        <span class="nb-pill nb-pill--white">Color: <%= habit.color %></span>
      </div>
    </div>
  </div>
</div>
