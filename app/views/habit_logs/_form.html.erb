<%= turbo_frame_tag "habit_log_form" do %>
  <div class="nb-card">
    <div class="flex items-start justify-between gap-6">
      <div>
        <p class="text-xs font-black uppercase tracking-widest">Log time block</p>
        <h2 class="mt-1 text-2xl font-black leading-tight">Add a time block</h2>
        <p class="mt-1 text-sm text-black/70">Track hours, not just minutes.</p>
      </div>
      <div class="nb-pill" style="background: <%= habit.color %>">
        <span class="inline-block h-2 w-2 border-2 border-black bg-black"></span>
        <span><%= habit.name %></span>
      </div>
    </div>

    <%= form_with(model: [habit, habit_log], class: "mt-6 grid gap-4 md:grid-cols-12") do |form| %>
      <div class="md:col-span-3">
        <%= form.label :logged_on, class: "nb-label" %>
        <%= form.date_field :logged_on, class: "nb-input mt-2", value: habit_log.logged_on || Date.current %>
      </div>

      <div class="md:col-span-2">
        <%= form.label :start_hour, "Start", class: "nb-label" %>
        <%= form.select :start_hour, (0..23).map { |h| [format_hour(h), h] }, { selected: habit_log.start_hour || 9 }, class: "nb-input mt-2" %>
      </div>

      <div class="md:col-span-2">
        <%= form.label :end_hour, "End", class: "nb-label" %>
        <%= form.select :end_hour, (1..24).map { |h| [format_hour(h == 24 ? 0 : h), h] }, { selected: habit_log.end_hour || 10 }, class: "nb-input mt-2" %>
      </div>

      <div class="md:col-span-5">
        <%= form.label :notes, class: "nb-label" %>
        <%= form.text_field :notes, class: "nb-input mt-2", placeholder: "What did you do?" %>
      </div>

      <div class="md:col-span-12 flex flex-col gap-2 sm:flex-row sm:items-center sm:gap-3">
        <%= form.submit "Save time block", class: "nb-btn nb-btn--yellow" %>
        <%= link_to "View full history", habit_habit_logs_path(habit), class: "nb-btn nb-btn--white" %>
      </div>
    <% end %>
  </div>
<% end %>
